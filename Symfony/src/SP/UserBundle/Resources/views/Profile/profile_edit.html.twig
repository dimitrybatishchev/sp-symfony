{% extends '::base-content.html.twig' %}

{% block main %}

<div class="page-header">
    <h1>Редактирование профиля</h1>
</div>

<form action="{{ path('profile_update') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
    {{ form_errors(form) }}
        
    <div class="control-group">
        <div class="control-label">
            {{ form_label(form.firstname) }}
        </div>
	<div class="controls">
            {{ form_widget(form.firstname) }}
	</div>
    </div>
    <div class="control-group">
        <div class="control-label">
            {{ form_label(form.middlename) }}
        </div>
	<div class="controls">
            {{ form_widget(form.middlename) }}
	</div>
    </div>
    <div class="control-group">
        <div class="control-label">
            {{ form_label(form.lastname) }}
        </div>
	<div class="controls">
            {{ form_widget(form.lastname) }}
	</div>
    </div>    
        
    {{ form_rest(form) }}
    <button type="submit" class="btn btn-info btn-large">Сохранить изменения</button>
</form>

{% endblock %}
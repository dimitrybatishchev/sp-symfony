{% extends 'PurchaseBundle::layout.html.twig' %}
{% block main %}

<div class="page-header"><h1>Список закупок</h1></div>

<table class="table table-striped table-condensed">
  <thead>
      <tr>
          <th>Название</th>
          <th>Статус</th>
          <th>Организатор</th>
          <th>Участников</th>
          <th>Дата создания</th>                                          
      </tr>
  </thead>   
  <tbody>
    {% for purchase in purchases %}
        <tr>
            <td><a href="{{ path('purchase_detail', { 'id': purchase.id }) }}">{{ purchase.title }}</a></td>
            <td><span class="label label-success">{{ purchase.status.name }}</span></td>
            <td></td>
            <td></td>
            <td>{{ purchase.created|date("m/d/Y") }}</td>                                       
        </tr>
    {% endfor %}                       
  </tbody>
</table>

{% endblock %}
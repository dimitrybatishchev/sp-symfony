{% extends 'SPBundle::layout.html.twig' %}
{% block main %}

<div class="page-header"><h1>Архив закупок</h1></div>

<table class="table table-striped table-condensed">
  <thead>
      <tr>
          <th>Название</th>
          <th>Статус</th>
          <th>Организатор</th>
          <th>Участников</th>
          <th>Дата создания</th>                                          
      </tr>
  </thead>   
  <tbody>
    {% for sp in entities %}
        <tr>
            <td><a href="{{ path('sp_show', { 'id': sp.id }) }}">{{ sp.title }}</a></td>
            <td><span class="label label-success">{{ sp.status.name }}</span></td>
            <td></td>
            <td></td>
            <td>{{ sp.created|date("m/d/Y") }}</td>                                       
        </tr>
    {% endfor %}                       
  </tbody>
</table>

{% endblock %}
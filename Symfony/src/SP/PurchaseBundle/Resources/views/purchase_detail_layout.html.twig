{% extends 'PurchaseBundle::layout.html.twig' %}
{% block main %}

<div class="page-header"><h1>Закупка "{{ purchase.title }}"</h1></div>

<div class="row-fluid">
    <div class="span9">
        {% block content %}
        {% endblock %}
    </div>
    <div class="span3">
        <div class="org">
            <legend>Организатор</legend>
            <div class="row-fluid">
                <div class="span4">
                    <img class="img-polaroid" src="{{ purchase.owner.webPath | apply_filter('small_thumb') }}">
                </div>
                <div class="span8">
                    <span>{{purchase.owner.firstname}} {{ purchase.owner.lastname }}</span>
                    <strong>{{ purchase.owner.username }}</strong>
                </div>
            </div>
            <div class="row-fluid" style="margin: 8px 0 16px 0;">
                <a href="{{ path('purchase_list_by_user', { 'username': purchase.owner.username }) }}"><i class="icon-list"></i> Все закупки организатора</a>
            </div>
        </div>
        <div class="usl">
            <legend>Условия закупки</legend>
            <table>
                <tr><td>Статус</td><td>{{ purchase.status.name }}</td></tr>
                <tr><td>Орг процент</td><td>{{ purchase.profit }}</td></tr>
                <tr><td>Предоплата</td><td>{{ purchase.prepaymentAmount }}</td></tr>
                <tr><td>Трансп. расходы</td><td></td></tr>
                <tr><td>Раздача длится</td><td></td></tr>
                <tr><td>Обмен брака</td><td></td></tr>
                <tr><td>Гарантия размера</td><td></td></tr>
                <tr><td>Город</td><td></td></tr>
            </table>
            <a class="btn btn-info btn-block" href=""><i class="icon-info-sign icon-white"></i> Все условия</a>
        </div>
    </div>
</div>

<style>
        .comments hr{
            margin: 5px 0;
        }
        .comments .item{
            padding: 10px 0 10px 10px;
        }
        .comments .item:after {
            content: "";
            display: table;
            clear: both;
          }
        .comments .item .image{
            float: left;
            margin: 0 10px 0 0;
        }
        .comments .item .data{
            float: left;
            margin: 0 10px 0 0;
            min-height: 60px;
        }
        .comments .item .data .date{
            font-size: 10px;
            color: #999;
        }
</style>

{% endblock %}
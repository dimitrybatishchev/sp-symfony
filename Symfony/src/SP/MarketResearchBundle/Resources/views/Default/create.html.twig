{% extends '::base-content.html.twig' %}

{% block main %}

<div class="page-header">
    <h1>Создание изучения спроса</h1>
</div>
<form action="{{ path('market_research_create') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
    {{ form_errors(form) }}
    <legend>Общая информация</legend>
    <div class="control-group">
        <div class="control-label">
            {{ form_label(form.name) }}
            {{ form_errors(form.name) }}
        </div>
	<div class="controls">
            {{ form_widget(form.name) }}
	</div>
    </div>
    <div class="control-group">
        <div class="control-label">
            {{ form_label(form.description) }}
            {{ form_errors(form.description) }}
        </div>
	<div class="controls">
            {{ form_widget(form.description) }}
	</div>
    </div>
    <div class="control-group">
        <div class="control-label">
            {{ form_label(form.file) }}
            {{ form_errors(form.file) }}
        </div>
	<div class="controls">
            {{ form_widget(form.file) }}
	</div>
    </div>
    {{ form_rest(form) }}

    <button type="submit" class="btn btn-info btn-large">Создать изучение спроса</button>

</form>
{% endblock %}
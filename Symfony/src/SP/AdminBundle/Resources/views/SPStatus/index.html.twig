{% extends '::base-admin.html.twig' %}
{% block body %}
<h1>Список статусов закупки</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Public Id</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admin_sp_status_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.publicId }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_sp_status_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_sp_status_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('admin_sp_status_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}
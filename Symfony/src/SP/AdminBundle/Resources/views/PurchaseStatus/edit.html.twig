{% extends '::base-admin.html.twig' %}
{% block body %}
<h1>Редактирование статуса закупки</h1>

<form action="{{ path('admin_purchase_status_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('admin_purchase_status') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('admin_purchase_status_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
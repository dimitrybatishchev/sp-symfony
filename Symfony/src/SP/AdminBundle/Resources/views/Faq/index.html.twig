{% extends '::base-admin.html.twig' %}
{% block body %}
<h1>Список вопросов-ответов</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Answer</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admin_faq_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.question }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_faq_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_faq_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('admin_faq_create') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}
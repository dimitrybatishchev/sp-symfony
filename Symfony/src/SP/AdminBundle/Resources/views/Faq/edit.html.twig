{% extends '::base-admin.html.twig' %}
{% block body %}
<h1>Редактирование вопроса-ответа</h1>

<form action="{{ path('admin_faq_edit', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
           {{ form_rest(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<form action="{{ path('admin_faq_delete', { 'id': entity.id }) }}" method="post">
    <input type="hidden" name="_method" value="DELETE" />
    {{ form_widget(delete_form) }}
    <button type="submit">Delete</button>
</form>

{% endblock %}
{% extends '::base-content.html.twig' %}

{% block main %}

<div class="page-header"><h1>Ваши заказы</h1></div>

    {% for order in orders %}
      <h3>{{ order.purchase.title }}</h3>
      <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th></th>
                <th>Название</th>
                <th>Количество</th>
                <th>Цена за шт.</th>
                <th>Итого</th>                                          
            </tr>
        </thead>   
        <tbody>
        {% for orderItem in order.items %}
          <tr>
              <td><img src="{{ orderItem.offer.webPath | apply_filter('small_thumb') }}"></td>
              <td>{{ orderItem.offer.title }}</td>
              <td>{{ orderItem.count }}</td>
              <td>{{ orderItem.offer.price }}</td>
              <td></td>                                       
          </tr>
        {% endfor %}      
        </tbody>
      </table>
    {% endfor %} 

{% endblock %}
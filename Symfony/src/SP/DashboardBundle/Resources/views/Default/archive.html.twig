{% extends '::base-content.html.twig' %}

{% block main %}

<div class="page-header"><h1>Список созданных и завершенных ваших закупок</h1></div>

{% if entities is none %}
<table class="table table-striped table-condensed">
  <thead>
      <tr>
          <th>Название</th>
          <th>Статус</th>
          <th>Участников</th>
          <th>Дата создания</th>                                          
      </tr>
  </thead>   
  <tbody>
    {% for sp in entities %}
        <tr>
            <td><a href="{{ path('sp_show', { 'id': sp.id }) }}">{{ sp.title }}</a></td>
            <td>{{ sp.status.name }}</td>
            <td></td>
            <td>{{ sp.created|date("m/d/Y") }}</td>                                       
        </tr>
    {% endfor %}                       
  </tbody>
</table>
{% else %}
    <div class="alert alert-info">Ваш архив пуст</div>
{% endif %}

{% endblock %}
{% extends '::base-content.html.twig' %}

{% block main %}

<div class="page-header"><h1>Список созданных вами закупок</h1></div>

<div class="pull-right"><a class="btn btn-large btn-danger" href="{{ path('purchase_create') }}">Организовать закупку</a></div><br><br><br>

<table class="table table-striped table-condensed">
  <thead>
      <tr>
          <th>Название</th>
          <th>Статус</th>
          <th>Участников</th>
          <th>Дата создания</th>                                          
      </tr>
  </thead>   
  <tbody>
    {% for sp in entities %}
        <tr>
            <td><a href="{{ path('purchase_detail', { 'id': sp.id }) }}">{{ sp.title }}</a></td>
            <td><span class="label label-success">{{ sp.status.name }}</span></td>
            <td></td>
            <td>{{ sp.created|date("m/d/Y") }}</td>                                       
        </tr>
    {% endfor %}                       
  </tbody>
</table>

{% endblock %}